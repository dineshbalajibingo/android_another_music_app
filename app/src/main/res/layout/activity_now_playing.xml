<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dineshbalajivenkataraman.mymusicapp.NowPlaying">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar_mymusic"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/toolbar_color"
        android:fitsSystemWindows="true" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/current_music"
        android:textSize="@dimen/text_size"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="343dp"
        android:layout_weight="2.05"
        app:srcCompat="@drawable/current_music" />
</LinearLayout>
